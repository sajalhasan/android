<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.world.caculator_practric.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.81"
        android:hint="Result" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        >

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:background="#565454"
            android:layout_marginRight="10dp"
            android:text="C"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="MC"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="MR"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="M+"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:background="#565454"
            android:layout_marginRight="10dp"
            android:text="≪"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="±"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="%"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="÷"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:background="#2e2323"
            android:layout_marginRight="10dp"
            android:text="7"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="8"
            android:background="#2e2323"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="9"
            android:background="#2e2323"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="×"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:background="#2e2323"
            android:layout_marginRight="10dp"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="5"
            android:background="#2e2323"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="6"
            android:background="#2e2323"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="-"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:background="#2e2323"
            android:layout_marginRight="10dp"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="2"
            android:background="#2e2323"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="3"
            android:background="#2e2323"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="+"
            android:background="#565454"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:background="#2e2323"
            android:layout_marginRight="10dp"
            android:text="Off"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:background="#2e2323"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />

        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="."
            android:background="#2e2323"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
        <Button
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginRight="10dp"
            android:text="="
            android:background="#f42929"
            android:textSize="30dp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</LinearLayout>
